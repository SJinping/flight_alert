.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

.filter-section {
  position: relative;
  padding: 24rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  z-index: 100;
}

.city-picker {
  width: 60%;
  text-align: center;
}

.picker {
  background: #f5f5f5;
  padding: 12rpx 24rpx;
  border: 1px solid #ddd;
  border-radius: 30rpx;
  font-size: 30rpx;
  color: #333;
}

.sort-buttons {
  display: flex;
  gap: 10rpx;
}

.sort-btn {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  background: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 4rpx;
}

.sort-btn.active {
  background: #1976d2;
  color: #fff;
  border-color: #1976d2;
}

.flight-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flight-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.city {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date {
  font-size: 28rpx;
  color: #666;
}

.price {
  font-size: 36rpx;
  color: #f50;
  font-weight: bold;
}

.book-btn {
  background: #1976d2;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
}

.book-btn:active {
  opacity: 0.9;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #666;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 自定义下拉菜单样式 */
.custom-picker {
  position: relative;
  width: 100%;
  cursor: pointer;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 30rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  border: 1px solid #eaeaea;
  box-shadow: inset 0 1rpx 3rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.picker-content text:first-child {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.button-hover {
  background-color: #f0f0f0;
  border-color: #d9d9d9;
}

.arrow {
  font-size: 24rpx;
  color: #1976d2;
  margin-left: 10rpx;
  transition: transform 0.3s;
}

/* 美化下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: calc(100% + 10rpx);
  left: 0;
  width: 100%;
  max-height: 650rpx;
  overflow-y: auto;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 999;
  animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.dropdown-item {
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #f5f5f5;
  font-size: 28rpx;
  color: #333;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.item-hover {
  background-color: #f5f7fa;
}

.dropdown-item.active {
  background-color: #e6f7ff;
  color: #1976d2;
  font-weight: 500;
}

.dropdown-item.active::before {
  content: "";
  display: inline-block;
  width: 6rpx;
  height: 28rpx;
  background-color: #1976d2;
  margin-right: 16rpx;
  border-radius: 3rpx;
}

/* 美化滚动条 */
.dropdown-menu::-webkit-scrollbar {
  width: 8rpx;
}

.dropdown-menu::-webkit-scrollbar-track {
  background: #f5f5f5;
  border-radius: 4rpx;
}

.dropdown-menu::-webkit-scrollbar-thumb {
  background: #ddd;
  border-radius: 4rpx;
}

.dropdown-menu::-webkit-scrollbar-thumb:hover {
  background: #ccc;
}

/* 美化调试信息 */
.debug-info {
  display: none; /* 隐藏调试信息 */
}

/* 美化表格容器 */
.table-container {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 美化无数据提示 */
.no-data {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  position: relative;
  margin-bottom: 10rpx;
}