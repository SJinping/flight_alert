/* 月份导航区域样式 */
.calendar-header {
  padding: 24rpx 0;
  background: #fff;
}

/* 美化月份导航箭头 */
.calendar .prev-month,
.calendar .next-month {
  width: 60rpx !important;
  height: 60rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  color: #1976d2 !important;
  font-size: 24rpx !important;
  background: rgba(25, 118, 210, 0.08) !important;
  border-radius: 50% !important;
  transition: all 0.25s ease !important;
  margin: 0 20rpx !important;
}

.calendar .prev-month:active,
.calendar .next-month:active {
  background: rgba(25, 118, 210, 0.2) !important;
  transform: scale(0.95) !important;
}

/* 美化月份标题 */
.calendar .current-month {
  font-size: 32rpx !important;
  font-weight: 500 !important;
  color: #333 !important;
}

/* 美化下方的月份导航 */
.month-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
}

.month-nav text {
  font-size: 30rpx;
  color: #333;
  padding: 0 20rpx;
}

.calendar-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.calendar {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.close {
  font-size: 40rpx;
  color: #999;
}

.flight-item {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.flight-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.flight-dates {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.book-btn {
  background: #1976d2;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;
}

/* 弹窗样式 */
.popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

.popup-content {
  position: relative;
  width: 85%;
  max-height: 80vh;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  z-index: 1001;
  animation: slideUp 0.3s ease-out;
}

.popup-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.popup-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.popup-body {
  max-height: calc(80vh - 100rpx);
}

.flight-list {
  padding: 20rpx;
}

.flight-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.flight-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.flight-city {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.flight-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #f50;
}

.flight-dates {
  display: flex;
  gap: 30rpx;
  margin-bottom: 24rpx;
}

.date-item {
  flex: 1;
}

.date-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  display: block;
}

.date-value {
  font-size: 28rpx;
  color: #333;
}

.book-btn {
  width: 100% !important;
  height: 80rpx;
  line-height: 80rpx;
  background: #1976d2;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 0;
  padding: 0;
}

.book-btn:active {
  opacity: 0.9;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
} 