.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn {
  background: #1976d2;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  margin-top: 40rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
}