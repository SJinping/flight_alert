page {
  --primary-color: #1976d2;
  --background-color: #f5f5f5;
  --text-color: #333333;
  --border-color: #e0e0e0;
  
  background-color: var(--background-color);
  color: var(--text-color);
  font-size: 28rpx;
  line-height: 1.5;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.dialog-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 12rpx;
  width: 80%;
  max-height: 80vh;
}

.dialog-header {
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dialog-body {
  padding: 20rpx;
  max-height: calc(80vh - 100rpx);
}

.button-primary {
  background-color: var(--primary-color);
  color: #ffffff;
}

.expired {
  color: #9e9e9e;
}